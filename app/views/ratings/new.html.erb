<div class="row">
  <div class="col-md-4 col-md-offset-4 headspace">
    <h1>Add a Rating</h1>

    <%= form_for @rating do |f| %>
        <div class="field">
          <%= f.label :value, "Rating" %>
          <%= f.select :value do %>
              <% [1, 2, 3, 4, 5].each do |c| %>
                  <%= content_tag(:option, c, value: c) %>
              <% end %>
          <% end %>
        </div>

        <%= f.hidden_field :resource, value: @resource%>

        <div class="actions">
          <%= f.submit "Add Rating", class:"btn btn-default" %>
        </div>
    <% end %>

  </div>
</div>