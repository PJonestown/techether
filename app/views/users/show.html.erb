<div class="row">
  <div class="col-md-6 col-md-offset-3 headspace">
    <h2><%= @user.name %></h2>
    <p>
      <% if @user.subject.nil? %>
        You should start learning a subject!
        <%= link_to "Learn a subject", subjects_path, class:"links" %>
      <% else %>
        You are learning <%= link_to @user.subject_name, subject_path(@user.subject), class:"links" %>! Good luck.

        <p><%= @user.subject_name %>: <%= @user.subject_description %></p>
        <div class="actions">
        <% if false %><%= link_to "Edit", edit_subject_path %><% end %>

        <%= link_to "Add Resource", new_resource_path, class:"links" %></br>
        <%= link_to "Stop Learning", @user.subject , method: :delete, class:"links" %>
        </div>

        <% if @resources.present? %>
            <h4>Resources for <%= @user.subject_name %></h4>
            <% @resources.each do |resource| %>
                <div class="resource">
                  <h4><%= resource.title %></h4>
                  <h5><%= resource.difficulty %> - <%= resource.source %></h5>
                  <p><%= resource.description %></p></br>
                </div>
            <% end %>
        <% end %>

      <% end %>
    </p>
  </div>
</div>