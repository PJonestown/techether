<% provide(:title, 'Subjects') %>
<div class="row">
	<div class="col-md-4 col-md-offset-4 headspace">
		<div id="indexcol">
			<h1>Subjects</h1></br>
			<% @subjects.each do |subject| %>
				<div class="subjects">
					<h3><%= link_to subject.name, subject_path(subject), class:"links" %></h3>
					<p><%= subject.description %></p>
				</div>
			<% end %>
			</br>
			<p id="spacer">Can't find what you're looking for?</p>
			<% if user_signed_in? %>
				<p><%= link_to "Click here", new_subject_path, class:"links" %> to create a new subject.</p>
			<% else %>
				<p><%= link_to "Log in", new_user_session_path, class:"links" %> to create a new subject.</p>
			<% end %>
		</div>
	</div>
</div>