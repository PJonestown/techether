<% provide(:title, 'Home') %>
<div id="background-image"></div>
<div id="content">
    <div class="container-fluid">
        <div class="panel-heading">
          <h1>I want to learn</h1>
        </div>
        <div class="panel-body">
          <%= form_tag subjects_path, method: :get do %>
            <div class="row">
            <%= text_field_tag :search, params[:search], class:"form-control col-md-4 col-md-offset-4", autofocus: :true %>
            </div>
            <%= submit_tag "Find Resources", name: nil, class:"btn btn-default", id:"mainbutt" %>
          <% end %>
        </div>
    </div>
</div>